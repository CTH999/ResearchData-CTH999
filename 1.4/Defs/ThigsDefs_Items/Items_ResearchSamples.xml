<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!--=============== Organic Research Samples ====================-->
   <ThingDef ParentName="ResourceBase">
    <defName>OrganicResearchSamples</defName>
    <label>Organic Research Samples</label>
    <description>Organic research samples are collected from organic nutrition, to use and examined when writing research papers or assembling research data.</description>
    <graphicData>
      <texPath>ResearchSamplesOrganic</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <techLevel>Neolithic</techLevel>
	<stackLimit>25</stackLimit>	
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <MarketValue>15</MarketValue>
      <Mass>0.6</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>1.5</DeteriorationRate>
    </statBases>
    <burnableByRecipe>true</burnableByRecipe>
    <healthAffectsPrice>false</healthAffectsPrice>
    <thingCategories>
      <li>Samples</li>
    </thingCategories>
  </ThingDef>
  
