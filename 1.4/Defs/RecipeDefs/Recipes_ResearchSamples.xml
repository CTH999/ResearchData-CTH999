<?xml version="1.0" encoding="UTF-8"?>
<Defs>

<!--=============== Organic Research Samples ====================-->
  <RecipeDef>
    <defName>OrganicResearchSamplesRecipe</defName>
    <label>Collect Organic Research Samples</label>
    <description>Organic research samples are collected from organic nutrition, to use and examined when writing research papers or assembling research data.</description>
    <jobString>Collecting Organic Research Samples.</jobString>
    <workAmount>4000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Interact_Research</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <fixedIngredientFilter>
      <categories>
        <li>FoodRaw</li>
      </categories>
      <specialFiltersToDisallow>
        <li>AllowPlantFood</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>FoodRaw</li>
      </categories>
    </defaultIngredientFilter>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>FoodRaw</li>
          </categories>
        </filter>
        <count>0.5</count>
      </li>
    </ingredients>
    <products>
      <OrganicResearchSamples>1</OrganicResearchSamples>
    </products>
	<recipeUsers>
		<li>ResearchSampleBench</li>
	</recipeUsers>
	<workSkill>Intellectual</workSkill>
	<skillRequirements>
      <Plants>2</Plants>
      <Cooking>2</Cooking>
    </skillRequirements>
  </RecipeDef> 
    
